    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/style.css"/>
		<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta3/css/all.css">
		<title>{title}</title>
	</head>
	<body>
	  <Header/>
		<slot />
		
		<Footer/>
		<script is:inline src="/script.js"></script>
		<script is:inline src="/carousel.js"></script>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js"></script>
		<script is:inline src="https://pro.fontawesome.com/releases/v6.0.0-beta3/js/all.js"></script>
