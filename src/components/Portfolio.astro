---
const response = await fetch('https://api.github.com/users/Juanppdev/repos?sort=created');
const data = await response.json();
const repositories = Array.isArray(data) ? data : []; // Verificar si data es un array
console.log(repositories.topics)
---

<div class="w-full p-1">
            
  <h1 class="text-center text-3xl">Portfolio</h1>
  <div class="flex flex-wrap mt-5 justify-center gap-2">
        
    {repositories
      .filter(git => git.topics && git.topics.includes('projectoficial'))
      .map(git => (
      
      
      <div class="w-44 h-auto mb-2 text-center md:w-64 bg-white rounded-lg">
        {git.name === 'noticias.mundocode' ? <img class="rounded-t-lg" src="/img/notidev.png" alt="" /> : null}
        {git.name === 'docs.mundodev' ? <img class="rounded-t-lg" src="/img/docsCode.png" alt="" /> : null}
        {git.name === 'aprendizaje-astro-blog' ? <img class="rounded-t-lg" src="/img/aprendizaje-astro-blog.png" alt="" /> : null}
        {git.name === 'MundoDev' ? <img class="rounded-t-lg" src="/img/mundocode.png" alt="" /> : null}
        <div class="p-5">
              
          <h5 class="mb-2 text-md md:text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{git.name}</h5>
          <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{git.description}</p>
          {git.fork === true ? <span set:html={`<span class="bg-yellow-100 text-yellow-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300">Forked</span>`} /> : null}
           <a href={git.html_url} class="inline-flex mt-2 items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            Ver Proyecto
            <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
        </div>
      </div>
    ))}
  </div>
  
</div>