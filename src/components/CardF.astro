---
const { icon, text, size } = Astro.props
const { flet1 , flet2, flet3 } = Astro.props
---



    <div class="max-w-xsm m-1 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <div class="flex flex-col items-center p-5">
            <svg class=" w-14 h-14 text-gray-800 dark:text-white" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox={size}>
                <path d={icon} d={flet1}/>
                <path d={flet2}/>
                <path d={flet3}/>
              </svg>
            <h1 class="mb-1 text-xl font-medium text-gray-900 dark:text-white">{text}</h1>
        </div>
    </div>
      